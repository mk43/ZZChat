<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.fitzeng.zzchat.view.TitleBar
        android:id="@+id/tb_setting"
        app:leftBackground="@drawable/returned"
        app:titleText="Setting"
        app:titleTextSize="12sp"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </org.fitzeng.zzchat.view.TitleBar>

    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="play guide always"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/iv_setting_guide"
            android:layout_alignParentRight="true"
            android:src="@drawable/btnselected"
            android:layout_width="100dp"
            android:layout_height="40dp" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="remember password"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/iv_setting_password"
            android:layout_alignParentRight="true"
            android:src="@drawable/btnselected"
            android:layout_width="100dp"
            android:layout_height="40dp" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="appear offline"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/iv_setting_offline"
            android:layout_alignParentRight="true"
            android:src="@drawable/btnunselected"
            android:layout_width="100dp"
            android:layout_height="40dp" />

    </RelativeLayout>

</LinearLayout>